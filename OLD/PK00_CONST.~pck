    c_CONTRACTOR_KTTK_ID CONSTANT integer := 1;
    c_KTTK_J_BANK_ID     CONSTANT integer := 1; -- ID банка для оплаты Физ.лиц
    c_KTTK_P_BANK_ID     CONSTANT integer := 2; -- ID банка для оплаты Юр.лиц
    
    -- ID менеджера для физического лица MANAGER_T (пока один на всех)
    c_MANAGER_SIEBEL_ID  CONSTANT integer := 1;

    -- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    --               ПРОЦЕДУРЫ И ФУНКЦИИ
    -- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    -- Функция для получения идентификатора Rep_Period_Id по заднной дате
    FUNCTION Get_Period_Id(p_Date IN date) RETURN INTEGER DETERMINISTIC PARALLEL_ENABLE;


END PK00_CONST;
/
