CREATE OR REPLACE PACKAGE PK00_CONST
IS
    -- Пакет для описания констант
    -- ==============================================================================
    c_PkgName   CONSTANT varchar2(30) := 'PK00_CONST';
    -- ==============================================================================
    c_RET_OK    CONSTANT integer := 0;
    c_RET_ER    CONSTANT integer :=-1;

    -- префикс у идентификатора тестовых заказов (order_no)
    c_Order_Test_Pref CONSTANT varchar2(3) := 'KH_';
    
    -- блокировка, устанавливаемая при расчете трафика/счетов
    c_Bill_Lock CONSTANT varchar2(16) := 'BILL_LOCK';    

    c_Mask_Length     CONSTANT number := 6; -- кол-во знаков для аппроксимации даипазонов

    -- дата, которую подставляем в DATE_TO вместо NULL
    c_DATE_MAX CONSTANT date := TO_DATE('01.01.2050','dd.mm.yyyy');

    --:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::--
    -- С П Р А В О Ч Н И К И
    --:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::--
    --=============================================================================--
    -- CURRENCY_T  -  справочник валют 
    --=============================================================================--
    c_CURRENCY_RUB    CONSTANT integer := 810;  -- Российский рубль
    c_CURRENCY_USD    CONSTANT integer := 840;  -- Доллар США
    c_CURRENCY_EUR    CONSTANT integer := 978;  -- Евро
    c_CURRENCY_YE     CONSTANT integer := 36;   -- Условная единица Доллар
    c_CURRENCY_YEE    CONSTANT integer := 250;  -- Условная единица Евро
    c_CURRENCY_YE_FIX CONSTANT integer := 286;  -- Условная единица доллар по курсу 28,6

    --=============================================================================--
    -- SERVICE_T  -  типы услуг 
    --=============================================================================--
    -- ВНИМАНИЕ: ID услуг для тестов (реальные получим после заполнения продукт каталога)
    c_SERVICE_CALL_MGMN   CONSTANT integer := 1;   -- Услуги междугородной/международной телефонной связи
    c_SERVICE_CALL_FREE   CONSTANT integer := 2;   -- услуга вызов нв 8-800
    c_SERVICE_CALL_ZONE   CONSTANT integer := 140; -- услуга зонового вызова
    c_SERVICE_CALL_LOCAL  CONSTANT integer := 125; -- услуга местного вызова
    c_SERVICE_OP_LOCAL    CONSTANT integer := 7;   -- Услуга присоединения на местном уровне
    c_SERVICE_NPL         CONSTANT integer := 101; -- Предоставление магистральных цифровых каналов связи (МЦКС/NPL)
    c_SERVICE_IP_ACCESS   CONSTANT integer := 104; -- Доступ в Интернет
    c_SERVICE_VPN         CONSTANT integer := 106; -- Виртуальная частная сеть (ВЧС/IP VPN)
    c_SERVICE_LM          CONSTANT integer := 108; -- Предоставление канала доступа к Единой магистральной цифровой сети связи (ЕМЦСС)
    c_SERVICE_SYNC        CONSTANT integer := 113; -- Синхронизация сетей связи
    c_SERVICE_DPL         CONSTANT integer := 126; -- Предоставление цифровых каналов связи (ЦКС)
    c_SERVICE_EPL         CONSTANT integer := 133; -- Виртуальный канал Ethernet (EPL)

    --=============================================================================--
    -- SUBSERVICE_T - типы компонентов услуг 
    --=============================================================================--
    c_SUBSRV_MG     CONSTANT integer := 1;   -- Автоматическое междугородное телефонное соединение    
    c_SUBSRV_MN     CONSTANT integer := 2;   -- Автоматическое международное телефонное соединение
    c_SUBSRV_MIN    CONSTANT integer := 3;   -- Доплата до мин. ежемесячной стоимости
    c_SUBSRV_DET    CONSTANT integer := 4;   -- 'Позвонковая детализация'
    c_SUBSRV_LOCAL  CONSTANT integer := 5;   -- Автоматическое местное телефонное соединение
    c_SUBSRV_ZONE   CONSTANT integer := 6;   -- Автоматическое зоновое телефонное соединение
    c_SUBSRV_INST   CONSTANT integer := 7;   -- Подключение
    c_SUBSRV_FREE   CONSTANT integer := 8;   -- Услуга "Бесплатный вызов"
    c_SUBSRV_ABP    CONSTANT integer := 9;   -- Абонплата за телефонную линию
    c_SUBSRV_IRT    CONSTANT integer := 31;  -- Раздельная тарификация
    c_SUBSRV_DISC   CONSTANT integer := 32;  -- Скидка
    c_SUBSRV_IDL    CONSTANT integer := 36;  -- Компенсация простоев
    c_SUBSRV_BACK   CONSTANT integer := 37;  -- Возврат трафика включенного в абонплату
    c_SUBSRV_RT8    CONSTANT integer := 38;  -- Маршрутизация сети на 8 IP адресов
    c_SUBSRV_VOLUME CONSTANT integer := 39;  -- Тарификация по объему
    c_SUBSRV_BURST  CONSTANT integer := 40;  -- Тарификация по полосе
    c_SUBSRV_REC    CONSTANT integer := 41;  -- Ежемесячный платеж
    
    --=============================================================================--
    -- Словарь D I C T I O N A R Y _ T
    --:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::--
    -- ID ключей (разделов) словаря данных
    --=============================================================================--
    c_DICT_KEY_ACCOUNT_TYPE    CONSTANT integer := 1;  -- Тип лицевого счета
    c_DICT_KEY_ACCOUNT_STATUS  CONSTANT integer := 2;  -- Статус лицевого счета
    c_DICT_KEY_BILL_TYPE       CONSTANT integer := 3;  -- Тип счета
    c_DICT_KEY_BILL_STATUS     CONSTANT integer := 4;  -- Статус счета
    c_DICT_KEY_ITEM_TYPE       CONSTANT integer := 5;  -- Тип позиции счета
    c_DICT_KEY_ITEM_STATUS     CONSTANT integer := 6;  -- Статус позиции счета
    c_DICT_KEY_CHARGE_TYPE     CONSTANT integer := 7;  -- Типы начислений
    c_DICT_KEY_ADDRESS_TYPE    CONSTANT integer := 8;  -- Тип адреса
    c_DICT_KEY_ORDER_LOCK_TYPE CONSTANT integer := 9;  -- Тип блокировки заказа
    c_DICT_KEY_DELIVERY_TYPE   CONSTANT integer := 10; -- Способ доставки счета
    c_DICT_KEY_CONTRACTOR_TYPE CONSTANT integer := 11; -- Тип контрагента
    c_DICT_KEY_RATESYSTEM      CONSTANT integer := 12; -- Тарификаторы
    c_DICT_KEY_CDR_SERVICE_ID  CONSTANT integer := 13; -- Соотв. идентификатора услуги связи в CDR услуге биллинга
    c_DICT_KEY_CDR_BIND_ERROR  CONSTANT integer := 14; -- Ошибки привязки CDR к Л/С
    c_DICT_KEY_BDR_RATE_ERROR  CONSTANT integer := 15; -- Ошибки тарификации BDR
    c_DICT_KEY_CB_SRV_TYPE     CONSTANT integer := 50; -- Соответствие служб биллинга признаку service_id CDR-а
    c_DICT_KEY_CB_SUBSRV_TYPE  CONSTANT integer := 60; -- Subservices, используемые при тарифкации BDR-ов
    c_DICT_KEY_SIGNER_ROLE     CONSTANT integer := 61; -- Роль подписанта
    c_DICT_PAYMENT_TYPE        CONSTANT integer := 62; -- Тип платежа
    c_DICT_MARKET_SEGMENT      CONSTANT integer := 63; -- Сегмент рынка
    c_DICT_CLIENT_TYPE         CONSTANT integer := 64; -- Тип клиента
    c_DICT_DELIVERY_METHOD     CONSTANT integer := 65; -- Способ доставки
    
    FUNCTION k_DICT_KEY_ACCOUNT_TYPE    RETURN INTEGER DETERMINISTIC; -- 1;  -- Тип лицевого счета
    FUNCTION k_DICT_KEY_ACCOUNT_STATUS  RETURN INTEGER DETERMINISTIC; -- 2;  -- Статус лицевого счета
    FUNCTION k_DICT_KEY_BILL_TYPE       RETURN INTEGER DETERMINISTIC; -- 3;  -- Тип счета
    FUNCTION k_DICT_KEY_BILL_STATUS     RETURN INTEGER DETERMINISTIC; -- 4;  -- Статус счета
    FUNCTION k_DICT_KEY_ITEM_TYPE       RETURN INTEGER DETERMINISTIC; -- 5;  -- Тип позиции счета
    FUNCTION k_DICT_KEY_ITEM_STATUS     RETURN INTEGER DETERMINISTIC; -- 6;  -- Статус позиции счета
    FUNCTION k_DICT_KEY_CHARGE_TYPE     RETURN INTEGER DETERMINISTIC; -- 7;  -- Типы начислений
    FUNCTION k_DICT_KEY_ADDRESS_TYPE    RETURN INTEGER DETERMINISTIC; -- 8;  -- Тип адреса
    FUNCTION k_DICT_KEY_ORDER_LOCK_TYPE RETURN INTEGER DETERMINISTIC; -- 9;  -- Тип блокировки заказа
    FUNCTION k_DICT_KEY_DELIVERY_TYPE   RETURN INTEGER DETERMINISTIC; -- 10; -- Способ доставки счета
    FUNCTION k_DICT_KEY_CONTRACTOR_TYPE RETURN INTEGER DETERMINISTIC; -- 11; -- Тип контрагента
    FUNCTION k_DICT_KEY_RATESYSTEM      RETURN INTEGER DETERMINISTIC; -- 12; -- Тарификаторы
    FUNCTION k_DICT_KEY_CDR_SERVICE_ID  RETURN INTEGER DETERMINISTIC; -- 13; -- Соотв. идентификатора услуги связи в CDR услуге биллинга
    FUNCTION k_DICT_KEY_CDR_BIND_ERROR  RETURN INTEGER DETERMINISTIC; -- 14; -- Ошибки привязки CDR к Л/С
    FUNCTION k_DICT_KEY_BDR_RATE_ERROR  RETURN INTEGER DETERMINISTIC; -- 15; -- Ошибки тарификации BDR
    FUNCTION k_DICT_KEY_CALENDAR        RETURN INTEGER DETERMINISTIC; -- 19; -- Типы дней календаря
    FUNCTION k_DICT_KEY_BILLING         RETURN INTEGER DETERMINISTIC; -- 20; -- Биллинг, который обслуживает группу клиентов
    FUNCTION k_DICT_KEY_TRF_STAT        RETURN INTEGER DETERMINISTIC; -- 21; -- Коды ошибок BDR
    FUNCTION k_DICT_KEY_BIND_ERR        RETURN INTEGER DETERMINISTIC; -- 22; -- Коды ошибок привязки CDR
    FUNCTION k_DICT_KEY_RATE_LEVEL      RETURN INTEGER DETERMINISTIC; -- 23; -- Уровень тарификации в ORDER_BODY_T.RATE_LAVEL_ID
    FUNCTION k_DICT_KEY_RATE_RULE       RETURN INTEGER DETERMINISTIC; -- 24; -- Правила тарификации в ORDER_BODY_T.RATE_RUEL_ID
    FUNCTION k_DICT_KEY_DISCOUNT_RULE   RETURN INTEGER DETERMINISTIC; -- 25; -- Правила предоставления групповых скидок
    FUNCTION k_DICT_KEY_CUR_CONV        RETURN INTEGER DETERMINISTIC; -- 26; -- Правила конвертации валюты
    FUNCTION k_DICT_KEY_DETAIL_TYPE     RETURN INTEGER DETERMINISTIC; -- 27; -- Типы детализаций для выставленных счетов
    FUNCTION k_DICT_KEY_CB_SRV_TYPE     RETURN INTEGER DETERMINISTIC; -- 50; -- Соответствие служб биллинга признаку service_id CDR-а
    FUNCTION k_DICT_KEY_CB_SUBSRV_TYPE  RETURN INTEGER DETERMINISTIC; -- 60; -- Subservices, используемые при тарифкации BDR-ов
    FUNCTION k_DICT_KEY_SIGNER_ROLE     RETURN INTEGER DETERMINISTIC; -- 61; -- Роль подписанта
    FUNCTION k_DICT_PAYMENT_TYPE        RETURN INTEGER DETERMINISTIC; -- 62; -- Тип платежа
    FUNCTION k_DICT_CLIENT_TYPE         RETURN INTEGER DETERMINISTIC; -- 63; -- Тип клиента
    FUNCTION k_DICT_MARKET_SEGMENT      RETURN INTEGER DETERMINISTIC; -- 64; -- Сегмент рынка
    FUNCTION k_DICT_DELIVERY_METHOD     RETURN INTEGER DETERMINISTIC; -- 65; -- Способ доставки
    FUNCTION k_DICT_PAYMENT_OPERATIONS  RETURN INTEGER DETERMINISTIC; -- 66  -- Операции с платежами
    FUNCTION k_DICT_SPEED_UNIT          RETURN INTEGER DETERMINISTIC; -- 67  -- Единица измерения скорости канала
    FUNCTION k_DICT_IP_SERVICE          RETURN INTEGER DETERMINISTIC; -- 68  -- IP - услуги
    FUNCTION k_DICT_VOICE_UNIT          RETURN INTEGER DETERMINISTIC; -- 69; -- Способ доставки    
    FUNCTION k_DICT_IP_VOLUME_UNIT      RETURN INTEGER DETERMINISTIC; -- 70; --Объем трафика (размерность)
    FUNCTION k_DICT_CONTRACT_TYPE       RETURN INTEGER DETERMINISTIC; -- 71; --Тип договора
    FUNCTION k_DICT_TERMINATING_REASON  RETURN INTEGER DETERMINISTIC; -- 72; --'Причина завершения вызова коммутаторо Huawei SoftX3000'
    FUNCTION k_DICT_Q850                RETURN INTEGER DETERMINISTIC; -- 73; -- Q.850 - стандартный код завершения вызова
    FUNCTION k_DICT_TERMINATION_CODE    RETURN INTEGER DETERMINISTIC; -- 74; -- SoftX3000 - код завершения вызова
    FUNCTION k_DICT_QoS                 RETURN INTEGER DETERMINISTIC; -- 75; -- Качество предоставления услуги по IP - каналу
    FUNCTION k_DICT_BILL_HISTORY_TYPE   RETURN INTEGER DETERMINISTIC; -- 76	 --	Тип операций истории счета
    FUNCTION k_DICT_INV_RULE            RETURN INTEGER DETERMINISTIC; -- 77	 -- правила формирования строк счета-фактуры

    -- --------------------------------------------------------------------------- --
    -- Период (PERIOD_T)
    -- --------------------------------------------------------------------------- --
    c_PERIOD_LAST CONSTANT varchar2(4) := 'LAST';  -- последний закрытый период
    c_PERIOD_OPEN CONSTANT varchar2(4) := 'OPEN';  -- текущий период
    c_PERIOD_NEXT CONSTANT varchar2(4) := 'NEXT';  -- следующий за текущим период
    c_PERIOD_BILL CONSTANT varchar2(4) := 'BILL';  -- биллингуемый, существует только 
                                                   -- до момента закрытия фин периода
    -- --------------------------------------------------------------------------- --
    -- Биллинги (ACCOUNT_T.BILLING_ID)
    -- --------------------------------------------------------------------------- --
    c_BILLING_OLD_NO_1C CONSTANT INTEGER := 2000;     -- Старый биллинг - без выгрузки в 1С
    c_BILLING_KTTK      CONSTANT INTEGER := 2001;     -- Объединенный биллинг BRM КТТК (новейший)
    c_BILLING_OLD       CONSTANT INTEGER := 2002;     -- PORTAL 6.5 - "Старый биллинг"
    c_BILLING_MMTS      CONSTANT INTEGER := 2003;     -- CBRM 7.5 - "Новый биллинг"
    c_BILLING_ACCESS    CONSTANT INTEGER := 2004;     -- Биллинг длока доступ
    c_BILLING_TEST      CONSTANT INTEGER := 2005;     -- Биллинг для тестов
    c_BILLING_SPB       CONSTANT INTEGER := 2006;     -- Биллинг для СПб Телепорт

    -- --------------------------------------------------------------------------- --
    -- Лицевые счета (ACCOUNT_T)
    -- --------------------------------------------------------------------------- --
    c_ACC_TYPE_P CONSTANT char(1) := 'P';          -- физические лица
    c_ACC_TYPE_J CONSTANT char(1) := 'J';          -- юридические лица
    c_ACC_TYPE_T CONSTANT char(1) := 'T';          -- тестовый
    c_ACC_TYPE_I CONSTANT char(1) := 'I';          -- внутренний биллинговый

    c_ACC_STATUS_BILL   CONSTANT varchar2(10):= 'B'; -- статус - биллингуемый (активен)
    c_ACC_STATUS_TEST   CONSTANT varchar2(10):= 'T'; -- статус - тестовый (не биллингуемый)
    c_ACC_STATUS_CLOSED CONSTANT varchar2(10):= 'C'; -- статус - закрыт
    
    -- --------------------------------------------------------------------------- --
    -- Заказы (ORDER_T)
    -- --------------------------------------------------------------------------- --
    c_ORDER_STATE_OPEN    CONSTANT varchar2(20) := 'OPEN';   -- открыт
    c_ORDER_STATE_LOCK    CONSTANT varchar2(20) := 'LOCK';   -- заблокирован
    c_ORDER_STATE_CLOSED  CONSTANT varchar2(20) := 'CLOSED'; -- закрыт
    c_ORDER_STATE_MOVED   CONSTANT varchar2(20) := 'MOVED';  -- перенесен
    
    -- --------------------------------------------------------------------------- --
    -- Уровень тарификации фиксированоого тарифа в ORDER_BODY_T.RATE_LAVEL_ID (абонплата/мин/...)
    -- --------------------------------------------------------------------------- --
    c_RATE_LEVEL_SUBSRV    CONSTANT INTEGER := 2301; -- Тариф указан на компонент услуги
    c_RATE_LEVEL_ORDER     CONSTANT INTEGER := 2302; -- Тариф указан на заказ
    c_RATE_LEVEL_ACCOUNT   CONSTANT INTEGER := 2303; -- Тариф указан на лицевой счет
    c_RATE_LEVEL_CONTRACT  CONSTANT INTEGER := 2304; -- Тариф указан на договор
      
    -- --------------------------------------------------------------------------- --
    -- Правила тарификации в ORDER_BODY_T.RATE_PLAN_ID 
    -- --------------------------------------------------------------------------- --
    c_RATE_RULE_MIN_STD      CONSTANT INTEGER := 2401; -- Стандартное начисление до минимальной суммы
    c_RATE_RULE_ABP_STD      CONSTANT INTEGER := 2402; -- Стандартное начисление абонплаты
    c_RATE_RULE_ABP_FREE_MIN CONSTANT INTEGER := 2403; -- Начисление абонплаты, включающей трафик в минутах
    c_RATE_RULE_IDL_STD      CONSTANT INTEGER := 2404; -- Компенсация простоев, стандартная схема
    c_RATE_RULE_ABP_MON      CONSTANT INTEGER := 2405; -- Начисление абонплаты, по помесячному тарифу (для бюджетников)
    c_RATE_RULE_IP_FIX_VOLIN CONSTANT INTEGER := 2406; -- Фиксированный с учетом объема исходящего трафика'    
    c_RATE_RULE_IP_VOLUME    CONSTANT INTEGER := 2407; -- по объему трафика'
    c_RATE_RULE_IP_VPN       CONSTANT INTEGER := 2408; -- VPN'
    c_RATE_RULE_IP_BURST     CONSTANT INTEGER := 2409; -- BURST'
    c_RATE_RULE_IP_RT        CONSTANT INTEGER := 2410; -- для раздельной тарификации'
    c_RATE_RULE_EPL_BURST    CONSTANT INTEGER := 2411; -- EPL BURST'
    c_RATE_RULE_DIS_STD      CONSTANT INTEGER := 2412; -- Применение групповой скидки
    c_RATE_RULE_SLA_H        CONSTANT INTEGER := 2413; -- простой задан в часах
    c_RATE_RULE_SLA_K        CONSTANT INTEGER := 2414; -- задан коэффициент доступности
    
    -- --------------------------------------------------------------------------- --
    -- Правила формирования строк счета-фактуры BILLINFO_T.INVOICE_RULE_ID 
    -- --------------------------------------------------------------------------- --
    c_INVOICE_RULE_STD       CONSTANT INTEGER := 7701; -- период строки соответствует периоду счета
    c_INVOICE_RULE_EXT       CONSTANT INTEGER := 7702; -- период строки соответствует мин/макс диапазону строк счета
    c_INVOICE_RULE_SUB       CONSTANT INTEGER := 7703; -- группировка строк по компонентам услуги. для договоров местного присоединения
   
    -- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - --
    -- Типы счетов:
    -- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - --
    c_BILL_TYPE_ONT CONSTANT char(1) := 'M';  -- разовый счет за услуги
    c_BILL_TYPE_REC CONSTANT char(1) := 'B';  -- ежемесячный счет за услуги
    c_BILL_TYPE_CRD CONSTANT char(1) := 'C';  -- кредит нота (сторнирующий счет)
    c_BILL_TYPE_DBT CONSTANT char(1) := 'D';  -- дебет нота (исправленный счет)
    c_BILL_TYPE_ADS CONSTANT char(1) := 'A';  -- корректировочный счет (только для выравнивания остатков, при импорте данных)
    c_BILL_TYPE_OLD CONSTANT char(1) := 'O';  -- ежемесячный счет за услуги прошедших периодов    

    -- список типов счетов (bill_type) на которые может лечь трафик
    c_BTYPE_FOR_BDR CONSTANT varchar(16) := '''B'',''D'',''O''';  

-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - --
    -- Типы операций истории изменений счетов:
    -- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - --
    c_BILL_HISTORY_CREATE          CONSTANT VARCHAR2(20) := 'CREATE';          -- создание счета
    c_BILL_HISTORY_CHANGE_STATUS   CONSTANT VARCHAR2(20) := 'CHANGE_STATUS';   -- смена статуса
    c_BILL_HISTORY_MAKE            CONSTANT VARCHAR2(20) := 'MAKE';            -- сформировать счет
    c_BILL_HISTORY_ROLLBACK        CONSTANT VARCHAR2(20) := 'ROLLBACK';        -- расформировать счет
    c_BILL_HISTORY_CHARGE_FIX      CONSTANT VARCHAR2(20) := 'CHARGE_FIXRATE';  -- сформировать абон.платы и минимальные платежи
    c_BILL_HISTORY_ROLLBACK_FIX    CONSTANT VARCHAR2(20) := 'ROLLBACK_FIXRATE';-- расформировать абон. платы и минимальыне платежи
    c_BILL_HISTORY_RECALC          CONSTANT VARCHAR2(20) := 'RECALC';          -- Пересчет счета

    -- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - --
    -- состояния счета:
    -- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - --
    -- счет выставлет, период закрыт, изменения начислений невозможны, 
    -- корректировки только через формирование дебит/кредит нот
    -- разрешен, только прием платежей и работа с задолженностью
    c_BILL_STATE_CLOSED  CONSTANT varchar2(20) := 'CLOSED';
    c_ITEM_STATE_CLOSED  CONSTANT varchar2(20) := 'CLOSED'; 
    -- счет готов, но отчетный период еще не закрыт, возможен пересчет начислений
    c_BILL_STATE_READY   CONSTANT varchar2(20) := 'READY';
    c_ITEM_STATE_REАDY   CONSTANT varchar2(20) := 'READY';
    -- счет готов, но массовая печать запрещена, до окончания проверки и перевода в READY 
    c_BILL_STATE_CHECK   CONSTANT varchar2(20) := 'CHECK';
    c_ITEM_STATE_CHECK   CONSTANT varchar2(20) := 'CHECK';
    -- счет пустой, но отчетный период еще не закрыт, возможен пересчет начислений
    c_BILL_STATE_EMPTY   CONSTANT varchar2(20) := 'EMPTY';
    c_ITEM_STATE_EMPTY   CONSTANT varchar2(20) := 'EMPTY';
    -- счет текущего - открыт для начислений и приема платежей 
    c_BILL_STATE_OPEN    CONSTANT varchar2(20) := 'OPEN';
    c_ITEM_STATE_OPEN    CONSTANT varchar2(20) := 'OPEN';
    -- ошибка при формировании счета
    c_BILL_STATE_ERROR   CONSTANT varchar2(20) := 'ERROR';
    c_ITEM_STATE_ERROR   CONSTANT varchar2(20) := 'ERROR';
    -- счет помечен как удаленный, ожидает физического удаления
    c_BILL_STATE_DELETED CONSTANT varchar2(20) := 'DELETED';
    
    -- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - --
    -- указатель на л/с нераспознанных платежей    
    c_UNKNOWN_PAY_ACCOUNT_ID CONSTANT INTEGER      := 2; 
    c_UNKNOWN_PAY_ACCOUNT_NO CONSTANT VARCHAR2(20) := 'ACC000000002';
    
    -- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - --
